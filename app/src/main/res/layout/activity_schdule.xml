<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V채lj Arbetstid"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="1229dp"
        android:layout_height="462dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195">


        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_weight="0.40"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.17"

            />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_weight="0.26"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.173">

            <TextView
                android:id="@+id/myDate"
                android:layout_width="262dp"
                android:layout_height="69dp"
                android:text="V채lj datum"
                android:textSize="35dp" />

            <!--<EditText
                android:id="@+id/nameInput"
                android:layout_width="267dp"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="Namn"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="35dp" />-->

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="262dp"
                android:layout_height="58dp" />

            <!--<EditText
                android:id="@+id/tidInput"
                android:layout_width="268dp"
                android:layout_height="68dp"
                android:ems="10"
                android:hint="Lunch eller kv채ll"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="35dp" />-->

            <LinearLayout
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="133dp"
                    android:layout_height="match_parent"
                    android:text="Lunch"
                    android:id="@+id/lunch"/>

                <CheckBox
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:text="Kv채ll"
                    android:id="@+id/kvell"/>

            </LinearLayout>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="269dp"
                android:layout_height="57dp"
                android:text="Spara" />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_weight="0.33"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.995"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.169">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Din arbetstid"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sparadDatum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/sparadNamn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/sparadTid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
